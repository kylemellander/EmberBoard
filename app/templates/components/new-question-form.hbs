<form class="ui form">
  <div class="field">
    <label for="question">Your Question</label>
    {{textarea value=question id="question"}}
  </div>

  <div class="field">
    <label for="notes">Notes</label>
    {{textarea value=notes id="notes"}}
  </div>

  <div class="field">
    <label for="author">Your Name</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <button {{action 'saveQuestion'}} class="ui button">Ask it!</button>
</form>
